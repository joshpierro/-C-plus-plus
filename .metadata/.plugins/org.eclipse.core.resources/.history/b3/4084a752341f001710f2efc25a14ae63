#include <iostream>
using namespace std;

int main() {
	 // prints !!!Hello World!!!
	int Factorial(int value){
		//cout <<  value << endl;
		int counter = value;
		while(counter>0){
		    value--;
		    cout << "value:"<< value << endl;
		}

		return value;
	}
	Factorial(6);
	return 0;
}
