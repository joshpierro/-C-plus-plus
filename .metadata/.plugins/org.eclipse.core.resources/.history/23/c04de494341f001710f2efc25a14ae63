#include <iostream>
using namespace std;

int Factorial(int value){
	cout << "value:"<< value << endl;
	while(value>=1){
		value--;
		cout << "value:"<< value << endl;
	}
	return 1;
	};

int main() {
	 // prints !!!Hello World!!!

	Factorial(6);
	return 0;
}
